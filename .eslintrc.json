{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/jsx-key": [
            "false",
            {
                "checkFragmentShorthand": "false"
            }
        ],
        "indent": [
            "error",
            4
        ],
        "quotes": [
            "error",
            "double"
        ]
    }
}
